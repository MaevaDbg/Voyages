{% extends 'MaDevVoyagesBundle::base_layout.html.twig'%}

{% block content %}

<h2>Pays</h2>

<a class="btn btn-small btn-info" href="{{ path('voyages_country_create') }}">Ajouter un pays</a>
<br/><br/>
<table class="table table-hover">
    <thead>
        <th>Pays</th>
        <th>Date de visite</th>
    </thead>
    <tbody>
    {% for country in countries %}
        <tr>
            <td>{{ country.name }}</td> 
            <td>{{ country.visitedate|date("d/m/Y") }}</td> 
            <td><a href="{{ path('voyages_country_update', {'country': country.id}) }}">Modifier</a></td> 
            <td><a href="{{ path('voyages_country_delete', {'country': country.id}) }}">Supprimer</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}