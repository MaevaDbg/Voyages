{% extends 'MaDevVoyagesBundle::base_layout.html.twig' %}

{% block content %}

    {{ form_start(form) }}

        <legend>Uploader des fichiers</legend>
        {{ form_errors(form) }}

        {{ form_errors(form.files) }}
        {{ form_label(form.files, 'SÃ©lectionnez des fichiers') }}
        {{ form_widget(form.files, { 'full_name': form.files.vars.full_name ~ '[]', 'attr': { 'multiple': 'multiple'} }) }}

        {{ form_row(form.directory, {'label': 'Liste des dossiers'}) }}
        {{ form_row(form.dir_name, {'label': 'Nouveau dossier ?'}) }}
        
        <label class="checkbox" for="form_thumb">Miniature ?
